
ifeq ($(MAKECMDGOALS),)
ifeq ($(ENV),development)
DEFAULT ?= .cli-version-update
endif
ifeq ($(ENV),testing)
DEFAULT ?= .cli-version-update install
endif
ifeq ($(ENV),production)
DEFAULT ?= build install
endif
endif

ifeq ($(MAKECMDGOALS),test)
ifeq ($(ENV),development)
DEFAULT ?= cli-version-check
endif
ifeq ($(ENV),testing)
DEFAULT ?= .cli-version-check test check
endif
ifeq ($(ENV),production)
DEFAULT ?= test check
endif
endif

